import turtle

wn = turtle.Screen()
wn.title("Clicker Spiel")
wn.bgcolor("black")

wn.register_shape("nuke.gif")
wn.register_shape("city.gif")


nuke = turtle.Turtle()
nuke.shape("nuke.gif")
nuke.speed(0)
nuke.penup


city = turtle.Turtle()
city.shape("city.gif")
city.speed(0)
city.penup

city.setpos(0, -240)


nukes = 0
dmg_clickers = 0
dmg_clicker_cost = 50

pen = turtle.Turtle()
pen.hideturtle()
pen.color("white")
pen.penup()
pen.goto(0, 200)
pen.write(f"Nukes: {nukes}", align="center", font=("impact", 32, "normal"))


def clicked(x, y):
    global nukes
    nukes += 1
    update_display()


def update_display():
    pen.clear()
    pen.write(f"Nukes: {nukes}", align="center", font=("impact", 32, "normal"))


nuke.onclick(clicked) 


def deal_dmg_clicker(x, y):
    global nukes, dmg_clickers, dmg_clicker_cost
    if nukes >= dmg_clicker_cost:
        nukes -= dmg_clicker_cost
        dmg_clickers += 1
        update_display()


def update_game_state():
    global nukes, dmg_clickers
    nukes += dmg_clickers
    update_display()
    wn.ontimer(update_game_state, 1000)


wn.tracer(0)
update_game_state()


city.onclick(deal_dmg_clicker) 


wn.update()
wn.mainloop()

